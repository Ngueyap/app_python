pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Checkout') {
            steps {
                sshagent(credentials: ['git_ssh']) {
                    sh "git branch --delete staging"
                    sh "git branch staging"
                    sh "git checkout staging"
                    sh "git push origin staging"
                }
            }
        }
        stage('Other Stuff') {
            steps {
                echo "doing other stuff"
            }
        }
        stage('Cleanup') {
            steps {
                sshagent(credentials: ['git_ssh']) {
                    /*
                    sh "git push origin -d staging"
                    echo "deleted staging"
                    */
                }
            }
        }
    }
}

